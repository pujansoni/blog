<!DOCTYPE html>
<html>
<head>
  <title>ExampleApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.18.0/jquery.validate.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.18.0/additional-methods.js"></script>
  <%= csrf_meta_tags %>
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <%= link_to "Example-App", root_path, class: "navbar-brand" %>
            </div>
            <% if logged_in? %>
                <ul class="nav navbar-nav">
                    <li><%= link_to(raw('<span class="glyphicon"></span> Home'), users_path) %></li>
                    <li><%= link_to(raw('<span class="glyphicon"></span> Profile'), @current_user) %></li>
                </ul>
            <% end %>
            <ul class="nav navbar-nav navbar-right">
                <% if !logged_in? %>
                    <li><%= link_to(raw('<span class="glyphicon glyphicon-user"></span> Register'), new_user_path) %></li>
                    <li><%= link_to(raw('<span class="glyphicon glyphicon-log-in"></span> Login'), login_path) %></li>
                <% else %>
                    <li><%= link_to(raw('<span class="glyphicon glyphicon-log-out"></span> Logout'), logout_path, method: :delete) %></li>
                <% end %>
            </ul>
        </div>
    </nav>
	<div class="container" style="margin-top:50px">
		<%= yield %>
	</div>
</body>
</html>
